{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@artifacts": ["artifacts/*"],
      "@deploy": ["deploy/*"],
      "@deployments": ["deployments/*"],
      "@typechained": ["typechained/index"]
    }
  },
  "exclude": ["dist", "node_modules"],
  "include": ["./typechained"]
}
